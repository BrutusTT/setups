<application>
    <name>HRI I spy</name>
    <description></description>
    <version>1.0</version>
    <authors>
        <author email="ijk1@hw.ac.uk">Ingo Keller</author>
    </authors>

    <module>
        <name>yarpdev</name>
        <parameters>--device opencv_grabber --width 640 --height 480</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <module>
        <name>HCMarker</name>
        <parameters></parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <!-- views -->
    <module>
            <name>yarpview</name>
            <parameters>--name /view/marker --x 0 --y 0 --p 50</parameters>
            <node>localhost</node>
    </module>

    <!-- data dumper -->
    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /dump/marker --dir dump/marker</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /dump/video --dir dump/video</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /dump/video_raw --dir dump/video_raw</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /dump/order --dir dump/order</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /dump/point --dir dump/point</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <parameters>--name /dump/speech --dir dump/speech</parameters>
        <node>localhost</node>
        <prefix></prefix>
    </module>


    <!-- grabber:out -->
    <connection>
            <from>/grabber</from>
            <to>/HCMarker/img:i</to>
            <protocol></protocol>
    </connection>

    <!-- HCMarker:out -->
    <connection>
            <from>/HCMarker/img:o</from>
            <to>/view/marker</to>
            <protocol></protocol>
    </connection>

    <!-- Dumper -->
    <connection>
        <from>/grabber</from>
        <to>/dump/video_raw</to>
    </connection>

    <connection>
        <from>/HCMarker/markers:o</from>
        <to>/dump/marker</to>
    </connection>

    <connection>
        <from>/HCMarker/order:o</from>
        <to>/dump/order</to>
    </connection>

    <connection>
        <from>/HCMarker/img:o</from>
        <to>/dump/video_marker</to>
    </connection>

    <connection>
        <from>/StateHandler/point:o</from>
        <to>/dump/point</to>
    </connection>

</application>
